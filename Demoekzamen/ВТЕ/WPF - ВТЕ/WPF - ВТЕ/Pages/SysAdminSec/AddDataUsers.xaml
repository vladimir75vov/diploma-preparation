<Page x:Class="WPF___ВТЕ.Pages.SysAdminSec.AddDataUsers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF___ВТЕ.Pages.SysAdminSec"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddDataUsers"
      Loaded="Page_Loaded"
      >

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="150">
            <TextBlock>Логин</TextBlock>
            <TextBox x:Name="login"/>
            <TextBlock>Почта</TextBlock>
            <TextBox x:Name="email"/>
            <TextBlock>Пароль</TextBlock>
            <TextBox x:Name="password"/>
            <TextBlock>Фамилия</TextBlock>
            <TextBox x:Name="surname"/>
            <TextBlock>Имя</TextBlock>
            <TextBox x:Name="name"/>
            <TextBlock>Отчество</TextBlock>
            <TextBox x:Name="patronymic"/>
            <TextBlock>Роль</TextBlock>
            <ComboBox x:Name="role" DisplayMemberPath="role"/>
            <Button Content="Добавить" x:Name="AddData" Click="AddData_Click"/>
        </StackPanel>
    </Grid>
</Page>
